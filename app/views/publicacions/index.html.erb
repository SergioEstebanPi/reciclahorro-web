<p id="notice"><%= notice %></p>

<h1>Publicacions</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publicacions.each do |publicacion| %>
      <tr>
        <td><%= publicacion.titulo %></td>
        <td><%= publicacion.descripcion %></td>
        <td><%= publicacion.imagen %></td>
        <td><%= publicacion.tipo %></td>
        <td><%= link_to 'Show', publicacion %></td>
        <td><%= link_to 'Edit', edit_publicacion_path(publicacion) %></td>
        <td><%= link_to 'Destroy', publicacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

