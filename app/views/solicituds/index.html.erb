<p id="notice"><%= notice %></p>

<h1>Solicitudes</h1>

<table class="table table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Fecha recoleccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @solicituds.each do |solicitud| %>
      <tr>
        <td><%= solicitud.titulo %></td>
        <td><%= solicitud.descripcion %></td>
        <td><%= solicitud.fecha_recoleccion %></td>
        <td><%= link_to 'Ver', solicitud %></td>
        <td><%= link_to 'Editar', edit_solicitud_path(solicitud) %></td>
        <td><%= link_to 'Eliminar', solicitud, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

