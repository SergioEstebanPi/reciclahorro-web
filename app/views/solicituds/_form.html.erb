    </div>

    <div class="field">
      <%= form.label :descripcion %>
      <%= form.text_area :descripcion, id: :solicitud_descripcion, class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :fecha_recoleccion %>
      <%= form.date_select :fecha_recoleccion, id: :solicitud_fecha_recoleccion, class:"form-control" %>
